<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Barra de búsqueda -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="¿Qué producto colombiano quieres hoy?"
                android:padding="10dp"
                android:layout_marginBottom="16dp" />

            <!-- Imagen del producto -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/chaqueta"
                android:contentDescription="Imagen del producto"
                android:scaleType="fitCenter"
                android:layout_marginBottom="16dp" />

            <!-- Descripción del producto -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción del producto:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chaqueta con parches únicos"
                android:backgroundTint="#E0E0E0"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Reseñas (Estrellas y número de reseñas) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Estrellas -->
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:isIndicator="true"
                    android:rating="4.5"
                    android:layout_marginRight="8dp" />

                <!-- Número de reseñas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="reseñas (304)"
                    android:textSize="14sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Preguntas frecuentes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preguntas frecuentes"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:backgroundTint="#E0E0E0"
                android:padding="10dp"
                android:layout_marginBottom="16dp">

                <!-- Preguntas frecuentes placeholder -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Qué material es la chaqueta?" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Cómo cuidar la prenda?" />
            </LinearLayout>

            <!-- Precio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio:"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="78,900"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginRight="8dp" />
            </LinearLayout>

            <!-- Texto promocional -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Participa en nuestro bazar y obtén hasta el 30% de descuento en este producto"
                android:textSize="14sp"
                android:textColor="#000000"
                android:backgroundTint="#E0E0E0"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Botón de participación en bazar -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Quieres participar en los bazares? Da click aquí"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>