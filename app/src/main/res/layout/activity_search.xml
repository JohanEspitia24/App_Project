<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E0E0E0">

    <!-- Barra de búsqueda -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="¿Qué producto colombiano quieres hoy?"
        android:padding="12dp"
        android:backgroundTint="#BDBDBD"
        android:textColorHint="#000000"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:background="@drawable/rounded_courners" />

    <!-- Grid de productos -->
    <GridLayout
        android:id="@+id/product_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:layout_margin="8dp">

        <!-- Producto 1 -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:src="@drawable/product1"
            android:scaleType="centerCrop" />

        <!-- Producto 2 -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:src="@drawable/product2"
            android:scaleType="centerCrop" />

        <!-- Producto 3 -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:src="@drawable/product3"
            android:scaleType="centerCrop" />

        <!-- Producto 4 -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:src="@drawable/product4"
            android:scaleType="centerCrop" />

        <!-- Producto 5 -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:src="@drawable/product5"
            android:scaleType="centerCrop" />

        <!-- Producto 6 -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:src="@drawable/product6"
            android:scaleType="centerCrop" />
    </GridLayout>

    <!-- Texto de eventos -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Quieres saber de nuestros eventos? Descuentos, premios y más"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:backgroundTint="#BDBDBD"
        android:background="@drawable/rounded_courners" />

</LinearLayout>
