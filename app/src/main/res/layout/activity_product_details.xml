<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Barra de búsqueda -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="¿Qué producto colombiano quieres hoy?"
                android:padding="10dp"
                android:layout_marginBottom="16dp" />

            <!-- Título de producto -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camiseta diferentes estilos"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Imagen del producto -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/chaqueta"
                android:contentDescription="Camisetas diferentes estilos"
                android:scaleType="fitCenter"
                android:layout_marginBottom="16dp" />

            <!-- Botón Comprar -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comprar"
                android:backgroundTint="#BDBDBD"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Contenedor de información adicional -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Sección izquierda -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Producido por:"
                        android:backgroundTint="#E0E0E0"
                        android:padding="10dp"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Quieres saber más?"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000"
                        android:layout_marginBottom="16dp" />

                </LinearLayout>

                <!-- Sección derecha -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dirección"
                        android:backgroundTint="#E0E0E0"
                        android:padding="10dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Talla"
                        android:backgroundTint="#E0E0E0"
                        android:padding="10dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unidades"
                        android:backgroundTint="#E0E0E0"
                        android:padding="10dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precio"
                        android:backgroundTint="#E0E0E0"
                        android:padding="10dp"
                        android:layout_marginBottom="16dp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>